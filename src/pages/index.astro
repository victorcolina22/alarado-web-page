---
import AlaradoIcon from "../components/icons/AlaradoIcon.astro";
import CheckIcon from "../components/icons/CheckIcon.astro";
import DarkLightToggle from "../components/DarkLightToggle.astro";
import Layout from "../layouts/Layout.astro";
import MenuIcon from "../components/icons/MenuIcon.astro";
---

<Layout title="Welcome to Astro.">
  <section class="p-5">
    <header class="flex justify-between items-center">
      <AlaradoIcon />
      <ul class="md:flex items-center gap-10 hidden">
        <li>
          <a
            class="text-[#909193] hover:text-[#111729] transition-colors"
            href="#">About us</a
          >
        </li>
        <li>
          <a
            class="text-[#909193] hover:text-[#111729] transition-colors"
            href="#">Product</a
          >
        </li>
        <li>
          <a
            class="text-[#909193] hover:text-[#111729] transition-colors"
            href="#">Resource</a
          >
        </li>
        <li>
          <a
            class="text-[#909193] hover:text-[#111729] transition-colors"
            href="#">Contact</a
          >
        </li>
      </ul>
      <MenuIcon class="md:hidden block" width="30px" />
      <DarkLightToggle />
    </header>

    <main
      class="mt-20 max-w-6xl mx-auto grid xl:grid-cols-2 grid-cols-1 grid-row-1 items-center"
    >
      <img
        class="object-cover xl:w-full xl:col-start-2 md:w-1/2 mx-auto animate-floating"
        src="hero-image-simple-homepage.webp"
        alt=""
      />

      <section
        class="flex flex-col justify-center items-start gap-5 mt-20 xl:col-start-1 xl:row-start-1 md:px-28 xl:p-0 p-0"
      >
        <p class="uppercase text-base text-[#111729]">
          ðŸ˜Ž simple way to communicate
        </p>
        <h1 class="text-[3.75rem] font-extrabold text-[#111729]">
          Actions for Accessibility in Design
        </h1>
        <p class="text-base text-[#909193]">
          The fastest way to build and deploy websites with resusable
          components.
        </p>

        <div class="flex gap-5 items-center">
          <a
            href="#"
            class="uppercase bg-[#3047C6] text-[#EEEEEE] py-3 px-10 rounded-xl"
            >get started</a
          >
          <a href="#" class="underline text-[#3047C6]">Get live demo</a>
        </div>

        <div class="flex gap-2 mb-5">
          <div class="flex items-center gap-2">
            <CheckIcon />
            <span class="text-sm text-[#909193]">No credit card required</span>
          </div>
          <div class="flex items-center gap-2">
            <CheckIcon />
            <span class="text-sm text-[#909193]">No software to install</span>
          </div>
        </div>
      </section>
    </main>
  </section>
</Layout>
